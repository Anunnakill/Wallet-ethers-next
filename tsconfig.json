{
  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "ESNext",
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
